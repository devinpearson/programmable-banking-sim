{
  "name": "programmable-banking-sim",
  "version": "1.2.0",
  "description": "Local Simulation of the api service. for local testing and demo purposes",
  "type": "module",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "npm run dev:tsc & npm run dev:node",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --enable-source-maps --watch dist/src/index.js",
    "test": "vitest",
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./public/output.css",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/src/",
    "build": "npm run clean && tsc && npm run copy-files"
  },
  "author": "Devin Pearson",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/express": "^4.17.21",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "programmable-card-code-emulator": "^1.2.0",
    "socket.io": "^4.7.5",
    "uuid": "^10.0.0",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "programmable-banking-faker": "^1.0.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
