{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    // "moduleResolution": "node",
    "outDir": "./dist",
    // "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
